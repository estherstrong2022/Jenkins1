pipeline {
    agent any
    stages {
        stage('init'){
            step {
                echo 'this is first step'
            }
        }
        stage('two'){
            agent {
                docker {
                    image 'maven'
                }
            }
            steps {
                echo 'install docker-maven'
            }
        }
        stage('tetiary'){
            step{
                echo 'mvn --version'
            }
        }
    }
}
